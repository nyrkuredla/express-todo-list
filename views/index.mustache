<!DOCTYPE html>
<html>
  {{>_head}}
  <body>
    <header>
      <h1>Tubular to-do list!</h1>
    </header>
    <main>
      <form class="new-todo" action="/todos" method="post">
        <input type="text" name="text" value="" placeholder="yoooo, type your tasks in here!" size=40 required>
      </form>
      <div class="todo-container">
        {{#todos}}
          <h2>Not done yet!</h2>
          {{>_incomplete}}
          <h2>Yooo, these are done!!</h2>
          <del>{{>_complete}}</del>
        {{/todos}}
      </div>
    </main>
  </body>
</html>
